{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    

    <div class="product">
    <div class="side_one">
            <h2>{{ product.name }}</h2>
                <p>{{ product.description|raw|striptags }}</p>
            <br><br>
            <p>
                {{ product.price }} €
            </p>
            <br>
            
            <p>
                {{ product.stock }} qté
            </p>
            <br>
                <p><a href="{{ path('cart_add', {'id': product.id}) }}"  class="btn btn-primary"><i class="fas fa-shopping-cart mr-1"></i> {{ 'Add' | trans}}</a>
                </p>
             <p>
                <a href="{{ path('app_product_index') }}" class="btn btn-light">{{ 'Back' | trans }} </a>
                <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-secondary">{{ 'Modify' | trans }}</a>
            </p>
            </div>
            <div class="side_two">
            <p>
                <img src="{{asset('/uploads/'~ product.image) }}" style="max-width: 300px;">
            </p>

            </div>

       </div>

   

   <footer>
        <section class="contact">
        <p>Contact : justine.patisserie@gmail.com</p>
        <p>+(33) 07 54 83 92 03</p>
        </section>

        <section class="social_networks">
            <ul>

                <li><i class="fa-brands fa-facebook-f"></i></li>
                <li><i class="fa-brands fa-instagram"></i></li>
                <li><i class="fa-brands fa-linkedin-in"></i></li>
            </ul>
            <p>Copyright 2023 ©JustineYang</p>
        </section>
        </footer>

{% endblock %}
